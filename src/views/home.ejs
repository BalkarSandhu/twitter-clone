<h1>Welcome to <%= name %></h1>

<% if(locals.user){ %> 
<Section>
    <h4>Create a Tweet</h4>
    <form action="/tweets/create" method="post">
        <textarea name="content" id="" cols="30" rows="10" placeholder="Write Tweet"></textarea>
        <input type="submit" value="Create Tweet">
    </form>
</Section>
<% } %> 

<div>
    <ul>
        <% for(tweet of tweets){ %> 
            <h2><li><%= tweet.content %></li></h2>
            <b><small><%=tweet.user.name %></small></b>
            <div>
                <% if(locals.user){ %> 
                    <form action="/comments/create" method="post">
                        <input type="text" name="content" placeholder="your comment">
                        <input type="hidden" name="tweet" value="<%= tweet._id %>">
                        <input type="submit" value="Add Comment">
                    </form>
                    <% } %> 
            </div>
            <hr>
        <% } %> 
    </ul>
</div>

